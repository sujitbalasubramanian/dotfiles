keybind=ctrl+t>j=goto_split:bottom
keybind=ctrl+t>k=goto_split:top
keybind=ctrl+t>l=goto_split:right

keybind=ctrl+t>shift+h=new_split:left
keybind=ctrl+t>shift+j=new_split:down
keybind=ctrl+t>shift+k=new_split:up
keybind=ctrl+t>shift+l=new_split:right
keybind=ctrl+t>f=toggle_split_zoom

keybind=ctrl+t>n=next_tab
keybind=ctrl+t>p=previous_tab

keybind=ctrl+t>c=new_tab
